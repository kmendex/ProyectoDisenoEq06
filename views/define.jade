doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='../css/estilosTab.css')
    link(rel='stylesheet' href='../fontawesome-free-5.15.1-web/css/all.css')
    link(href='https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;700&display=swap' rel='stylesheet')
    title Pagina Web
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='../javascript/tabs.js')
  body
    #status.invisible #{alerta}
    .wrap
      ul.tabs
        li
          a(href='/')
            span.fas.fa-home
            span.tabTex Inicio
        li
          a(href='#tab1')
            span.fas.fa-landmark
            span.tabTex Organizacion
        li
          a(href='#tab2')
            span.fas.fa-mountain
            span.tabTex Zona
        li
          a(href='#tab3')
            span.fas.fa-project-diagram
            span.tabTex Rama
        li
          a(href='#tab4')
            span.fas.fa-users
            span.tabTex Grupo
        li
          a(href='#tab5')
            span.fas.fa-user-circle
            span.tabTex Miembro
        li
          a(href='#tab6')
            span.fas.fa-user-plus
            span.tabTex Rol
      .secciones
        // Organizacion
        article#tab1
          // Aqui va un grid de los miembros
          h1 Organizacion
          form(action='/define/organizacion' method='POST')
            label Nombre de la Organizacion
            input#name_Organizacion.textBox(alig='center' type='text' placeholder='Nombre' name='name_Organizacion')
            br
            label Asesor General
            input#asesorGeneral_Organizacion.textBox(type='text' placeholder='Asesor' name='asesorGeneral_Organizacion')
            br
            label Direccion Web
            input#direccionWeb_Organizacion.textBox(type='text' placeholder='Sitio Web' name='direccionWeb_Organizacion')
            br
            label Cedula Juridica
            input#cedulaJurd_Organizacion.textBox(type='text' placeholder='Cedula Juridica' name='cedulaJurd_Organizacion')
            br
            label Telefono
            input#telefono_Organizacion.textBox(type='text' placeholder='Nº Telefono' name='telefono_Organizacion')
            br
            label Correo
            input#correo_Organizacion.textBox(type='text' placeholder='Correo' name='correo_Organizacion')
            br
            br
            label Provincia:
            select#listadoProvincias_Organizacion.listas(name='Provincia')
              option(value='Limon') Limon
              option(value='San Jose') San Jose
              option(value='Heredia') Heredia
              option(value='Alajuela') Alajuela
            br
            br
            label Canton:
            select#listadoCantones_Organizacion.listas(name='Canton')
              option(value='Canton#1') Canton#1
              option(value='Canton#2') Canton#2
              option(value='Canton#3') Canton#3
              option(value='Canton#4') Canton#4
            br
            br
            label Distrito:
            select#listadoDistritos_Organizacion.listas(name='Distrito')
              option(value='Distrito#1') Distrito#1
              option(value='Distrito#2') Distrito#2
              option(value='Distrito#3') Distrito#3
              option(value='Distrito#4') Distrito#4
            br
            label Otras Señas
            input#especificacion_Organizacion.textBox(type='text' placeholder='Otras Señas' name='especificacion_Organizacion')
            br
            button#btnGuardar_Organizacion.Boton Guardar
        // Zona
        article#tab2
          h1 Zona
          form(action='/define/zona' method='POST')
            label Nombre
            input#name_Zona.textBox(type='text' placeholder='Nombre' name='name_Zona')
            br
            label Identificador
            input#id_Zona.textBox(type='text' placeholder='Identificador' name='id_Zona')
            br
            button#btnGuardar_Zona.Boton Agregar
          table#tabla_Zona(style='width: 50%')
            tbody
              tr
                th Nombre
                th Identificacion
                th Fecha Creacion
              tr
                td Zona Brunca
                td ZON-01
                td Mayo 20, 2015
              tr
                td Zona Huetar
                td ZON-02
                td Enero 20, 2016
              tr
                td Zona Central
                td ZON-03
                td Enero 15, 2015
        // Rama
        article#tab3
          h1 Rama
          form(action='/define/rama' method='POST')
            label Zona:
            select#listadoZonas_Rama.listas(name='Zona')
              option(value='Atlantica') Atlantica
              option(value='Central') Central
              option(value='Sur') Sur
              option(value='Norte') Norte
            br
            br
            label Nombre
            input#name_Rama.textBox(type='text' placeholder='Nombre' name='name_Rama')
            br
            label Identificador
            input#id_Rama.textBox(type='text' placeholder='Identificador' name='id_Rama')
            br
            button#btnGuardar_Rama.Boton Agregar
          table#tabla_Rama(style='width: 50%')
            tbody
              tr
                th Nombre
                th Identificacion
                th Fecha Creacion
              tr
                td Rama Universitaria
                td RAM-01
                td Mayo 20, 2015
              tr
                td Rama Sicaria
                td RAM-02
                td Enero 20, 2016
              tr
                td Rama Paramedica
                td RAM-03
                td Enero 15, 2015
        // Grupo
        article#tab4
          h1 Grupo
          form(action='/define/grupo' method='POST')
            label Zona:
            select#listadoZonas_Grupo.listas(name='Zona')
              option(value='Atlantica') Atlantica
              option(value='Central') Central
              option(value='Sur') Sur
              option(value='Norte') Norte
            br
            label Rama:
            select#listadoRamas_Grupo.listas(name='Rama')
              option(value='Juvenil') Juvenil
              option(value='Medicos') Medicos
              option(value='Abogados') Abogados
              option(value='Sicarios') Sicarios
            br
            br
            label Nombre
            input#name_Grupo.textBox(type='text' placeholder='Nombre' name='name_Grupo')
            br
            label Identificador
            input#id_Grupo.textBox(type='text' placeholder='Identificador' name='id_Grupo')
            br
            button#btnGuardar_Grupo.Boton Agregar
          br
          br
          label Designar Jefe:
          select#jefe_Grupo.listas(name='jefe')
            option(value='Miembro#1') Miembro#1
            option(value='Miembro#2') Miembro#2
            option(value='Miembro#3') Miembro#3
            option(value='Miembro#4') Miembro#4
          br
          br
          label Designar Monitor:
          select#monitor_Grupo.listas(name='monitor')
            option(value='Miembro#1') Miembro#1
            option(value='Miembro#2') Miembro#2
            option(value='Miembro#3') Miembro#3
            option(value='Miembro#4') Miembro#4
          table#tabla_Grupo(style='width: 50%')
            tbody
              tr
                th Nombre
                th Identificacion
                th Fecha Creacion
              tr
                td Grupo Lobo
                td GR-01
                td Mayo 20, 2015
              tr
                td Grupo Mapache
                td GR-02
                td Enero 20, 2016
              tr
                td Grupo Ardilla
                td GR-03
                td Enero 15, 2015
        // Miembro
        article#tab5
          h1 Miembro
          form(action='/define/miembro' method='POST')
            label Nombre
            input#name_Miembro.textBox(type='text' placeholder='Nombre' name='name_Miembro')
            br
            label Apellidos
            input#apellidos_Miembro.textBox(type='text' placeholder='Apellidos' name='apellidos_Miembro')
            br
            label Numero de Identificacion
            input#identificacion_Miembro.textBox(type='text' placeholder='Nº Identificacion' name='identificacion_Miembro')
            br
            label Telefono
            input#telefono_Miembro.textBox(type='text' placeholder='Nº Telefono' name='telefono_Miembro')
            br
            label Correo
            input#correo_Miembro.textBox(type='text' placeholder='Correo' name='correo_Miembro')
            br
            br
            label Provincia:
            select#listadoProvincias_Miembro.listas(name='Provincia')
              option(value='Limon') Limon
              option(value='San Jose') San Jose
              option(value='Heredia') Heredia
              option(value='Alajuela') Alajuela
            br
            br
            label Canton:
            select#listadoCantones_Miembro.listas(name='Canton')
              option(value='Canton#1') Canton#1
              option(value='Canton#2') Canton#2
              option(value='Canton#3') Canton#3
              option(value='Canton#4') Canton#4
            br
            br
            label Distrito:
            select#listadoDistritos_Miembro.listas(name='Distrito')
              option(value='Distrito#1') Distrito#1
              option(value='Distrito#2') Distrito#2
              option(value='Distrito#3') Distrito#3
              option(value='Distrito#4') Distrito#4
            br
            label Otras Señas
            input#especificacion_Miembro.textBox(type='text' placeholder='Otras Señas' name='especificacion_Miembro')
            br
            button#btnGuardar_Miembro.Boton Agregar
        // Rol
        article#tab6
          h1 Rol
          label Miembro buscado
          input#id_Rol.textBox(type='text' placeholder='ID')
          button#btnBuscar_Rol.Boton Buscar
          br
          br
          label Nombre
          input#name_Rol.textBox(type='text' placeholder='Nombre')
          br
          label Numero de Identificacion
          input#identificacion_Rol.textBox(type='text' placeholder='Nº Identificacion')
    script.
        if($('div#status').text()!='')
        {
            alert($('div#status').text());
        }
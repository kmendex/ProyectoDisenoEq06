{{> header title=pagina.tipo}}
    <p class="lead">
        {{#ifeq pagina.tipo "Organizacion"}}
            {{pagina.titulo}}            
                <body onload="cargarProvincias('selectDOrganizacionProvincia');">
                <form id="definirOrganizacion">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="bmd-label-floating" for="inputDOrganizacionNombre">Nombre de la Organizacion</label>
                            <input type="text" class="form-control" id="inputDOrganizacionNombre">{{jerarquia.nombre}}</input>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="bmd-label-floating" for="inputDOrganizacionAsesor">Asesor General</label>
                            <input type="text" class="form-control" id="inputDOrganizacionAsesor">{{jerarquia.asesor}}</input>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="bmd-label-floating" for="inputDOrganizacionWeb">Direccion Web</label>
                        <input type="text" class="form-control" id="inputDOrganizacionWeb">{{jerarquia.web}}</input>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label class="bmd-label-floating" for="inputDOrganizacionCedula">Cedula Juridica</label>
                            <input type="text" class="form-control" id="inputDOrganizacionCedula">{{jerarquia.cedula}}</input>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="bmd-label-floating" for="inputDOrganizacionTelefono">Telefono</label>
                            <input type="text" class="form-control" id="inputDOrganizacionTelefono">{{jerarquia.telefono}}</input>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="bmd-label-floating" for="inputDOrganizacionCorreo">Correo</label>
                            <input type="email" class="form-control" id="inputDOrganizacionCorreo">{{jerarquia.correo}}</input>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="selectDOrganizacionProvincia">Provincia</label>
                            <select id="selectDOrganizacionProvincia" class="form-control" onchange="if (this.selectedIndex) cargarCantones('selectDOrganizacionCanton',this.value);">
                                <option selected>Provincia</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="selectDOrganizacionCanton">Canton</label>
                            <select id="selectDOrganizacionCanton" class="form-control" onchange="if (this.selectedIndex) cargarDistritos('selectDOrganizacionDistrito',this.value);">
                                <option selected>Canton</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="selectDOrganizacionDistrito">Distrito</label>
                            <select id="selectDOrganizacionDistrito" class="form-control">
                                <option selected>Distrito</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="bmd-label-floating" for="inputDOrganizacionOtra">Otras Se√±as</label>
                        <input type="text" class="form-control" id="inputDOrganizacionOtra">{{jeraquia.senas}}</input>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <button class="btnDOrganizacion btn-danger" onclick="definirOrganizacion()">Guardar</button>
                        </div>
                    </div>
                </form>
            </body>                
        {{/ifeq}}

        {{#ifeq pagina.tipo "Coordinacion"}}
